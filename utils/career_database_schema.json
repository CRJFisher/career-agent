{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Career Database Schema",
  "description": "Schema for career database YAML files",
  "type": "object",
  "required": ["personal_info", "experience", "education", "skills"],
  "properties": {
    "personal_info": {
      "type": "object",
      "required": ["name", "email"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1,
          "description": "Full name"
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "Email address"
        },
        "phone": {
          "type": "string",
          "description": "Phone number"
        },
        "location": {
          "type": "string",
          "description": "City, State/Country"
        },
        "linkedin": {
          "type": "string",
          "format": "uri",
          "description": "LinkedIn profile URL"
        },
        "github": {
          "type": "string",
          "format": "uri",
          "description": "GitHub profile URL"
        },
        "website": {
          "type": "string",
          "format": "uri",
          "description": "Personal website URL"
        },
        "summary": {
          "type": "string",
          "description": "Professional summary"
        }
      }
    },
    "experience": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["title", "company", "duration", "description", "achievements"],
        "properties": {
          "title": {
            "type": "string",
            "minLength": 1,
            "description": "Job title"
          },
          "company": {
            "type": "string",
            "minLength": 1,
            "description": "Company name"
          },
          "duration": {
            "type": "string",
            "pattern": "^(\\d{4}|\\w{3}\\s\\d{4})\\s*[-–]\\s*(\\d{4}|\\w{3}\\s\\d{4}|Present)$",
            "description": "Time period"
          },
          "location": {
            "type": "string",
            "description": "Office location"
          },
          "description": {
            "type": "string",
            "minLength": 1,
            "description": "Role description"
          },
          "achievements": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            },
            "description": "List of quantified achievements"
          },
          "technologies": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            },
            "description": "Technologies used"
          },
          "team_size": {
            "type": "integer",
            "minimum": 1,
            "description": "Size of team managed/worked with"
          }
        }
      }
    },
    "education": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["degree", "institution", "year"],
        "properties": {
          "degree": {
            "type": "string",
            "minLength": 1,
            "description": "Degree type and field"
          },
          "institution": {
            "type": "string",
            "minLength": 1,
            "description": "University/College name"
          },
          "year": {
            "type": "string",
            "pattern": "^\\d{4}(\\s*[-–]\\s*\\d{4})?$",
            "description": "Graduation year or years attended"
          },
          "location": {
            "type": "string",
            "description": "Institution location"
          },
          "gpa": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+/\\d+\\.\\d+$",
            "description": "GPA"
          },
          "honors": {
            "type": "string",
            "description": "Honors received"
          },
          "details": {
            "type": "string",
            "description": "Additional details"
          },
          "coursework": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            },
            "description": "Relevant coursework"
          }
        }
      }
    },
    "skills": {
      "type": "object",
      "required": ["technical"],
      "properties": {
        "technical": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          },
          "description": "Technical skills"
        },
        "soft": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "description": "Soft skills"
        },
        "languages": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "description": "Spoken languages"
        },
        "tools": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "description": "Software tools"
        },
        "frameworks": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "description": "Frameworks and libraries"
        },
        "methodologies": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "description": "Work methodologies"
        }
      }
    },
    "projects": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "description", "technologies", "outcomes"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "description": "Project name"
          },
          "description": {
            "type": "string",
            "minLength": 1,
            "description": "Project description"
          },
          "role": {
            "type": "string",
            "description": "Your role in the project"
          },
          "duration": {
            "type": "string",
            "description": "Project duration"
          },
          "technologies": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            },
            "description": "Technologies used"
          },
          "outcomes": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string",
              "minLength": 1
            },
            "description": "Quantified outcomes/impact"
          },
          "url": {
            "type": "string",
            "format": "uri",
            "description": "Project URL or repository"
          }
        }
      }
    },
    "certifications": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "issuer", "year"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "description": "Certification name"
          },
          "issuer": {
            "type": "string",
            "minLength": 1,
            "description": "Issuing organization"
          },
          "year": {
            "type": "string",
            "pattern": "^\\d{4}$",
            "description": "Year obtained"
          },
          "expiry": {
            "type": "string",
            "description": "Expiration date"
          },
          "credential_id": {
            "type": "string",
            "description": "Credential ID"
          },
          "url": {
            "type": "string",
            "format": "uri",
            "description": "Verification URL"
          }
        }
      }
    },
    "publications": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["title", "venue", "year"],
        "properties": {
          "title": {
            "type": "string",
            "minLength": 1,
            "description": "Publication title"
          },
          "venue": {
            "type": "string",
            "minLength": 1,
            "description": "Where published"
          },
          "year": {
            "type": "string",
            "pattern": "^\\d{4}$",
            "description": "Publication year"
          },
          "type": {
            "type": "string",
            "enum": ["paper", "article", "presentation", "thesis"],
            "description": "Type of publication"
          },
          "url": {
            "type": "string",
            "format": "uri",
            "description": "Link to publication"
          },
          "coauthors": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            },
            "description": "Co-authors"
          }
        }
      }
    },
    "awards": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "organization", "year"],
        "properties": {
          "name": {
            "type": "string",
            "minLength": 1,
            "description": "Award name"
          },
          "organization": {
            "type": "string",
            "minLength": 1,
            "description": "Awarding organization"
          },
          "year": {
            "type": "string",
            "pattern": "^\\d{4}$",
            "description": "Year received"
          },
          "description": {
            "type": "string",
            "description": "Award description"
          }
        }
      }
    }
  }
}